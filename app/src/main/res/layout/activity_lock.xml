<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.lock.LockActivity">

    <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <fragment
        android:id="@+id/lockDisplay"
        android:name="com.example.win.easy.view.lock.DisplayFragment"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.win.easy.view.lock.SearchFragment"
        android:layout_width="match_parent"
        android:layout_height="270dp"/>
    <fragment
        android:id="@+id/handWritingFragment"
        android:name="com.example.win.easy.view.lock.HandWritingFragment"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
